<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0EAD3"
    tools:context=".telaInicialADM">

    <ImageView
        android:id="@+id/imgLogoADM"
        android:layout_width="202dp"
        android:layout_height="133dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="105dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_sem_fundo" />

    <TextView
        android:id="@+id/txtHomeADM1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="215dp"
        android:fontFamily="@font/poppins"
        android:text="Bem-vindo, administrador!"
        android:textSize="14dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="110dp" />

    <TextView
        android:id="@+id/txtHomeADM2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins"
        android:text="O que deseja fazer hoje?"
        android:textSize="14dp"
        app:layout_constraintTop_toBottomOf="@+id/txtHomeADM1"
        tools:layout_editor_absoluteX="119dp" />

    <ImageView
        android:id="@+id/imgQuadradoADM1"
        android:layout_width="93dp"
        android:layout_height="82dp"
        android:layout_marginStart="90dp"
        android:layout_marginEnd="46dp"
        app:layout_constraintEnd_toStartOf="@+id/imgQuadradoADM2"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/quadrado"
        tools:layout_editor_absoluteY="325dp" />

    <ImageView
        android:id="@+id/imgQuadradoADM2"
        android:layout_width="93dp"
        android:layout_height="82dp"
        android:layout_marginEnd="90dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/quadrado"
        tools:layout_editor_absoluteY="323dp" />

    <ImageView
        android:id="@+id/imgQuadradoADM3"
        android:layout_width="93dp"
        android:layout_height="82dp"
        android:layout_marginStart="90dp"
        android:layout_marginEnd="46dp"
        app:layout_constraintEnd_toStartOf="@+id/imgQuadradoAdm4"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/quadrado"
        tools:layout_editor_absoluteY="479dp" />

    <ImageView
        android:id="@+id/imgQuadradoAdm4"
        android:layout_width="93dp"
        android:layout_height="82dp"
        android:layout_marginEnd="90dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/quadrado"
        tools:layout_editor_absoluteY="479dp" />

    <ImageButton
        android:id="@+id/imgbCadastrar"
        android:layout_width="58dp"
        android:layout_height="56dp"
        android:background="@null"
        app:layout_constraintBottom_toBottomOf="@+id/imgQuadradoADM1"
        app:layout_constraintEnd_toEndOf="@+id/imgQuadradoADM1"
        app:layout_constraintStart_toStartOf="@+id/imgQuadradoADM1"
        app:layout_constraintTop_toTopOf="@+id/imgQuadradoADM1"
        app:srcCompat="@drawable/cadastrar" />

    <ImageButton
        android:id="@+id/imgbGerenciar"
        android:layout_width="58dp"
        android:layout_height="56dp"
        android:background="@null"
        app:layout_constraintBottom_toBottomOf="@+id/imgQuadradoADM2"
        app:layout_constraintEnd_toEndOf="@+id/imgQuadradoADM2"
        app:layout_constraintStart_toStartOf="@+id/imgQuadradoADM2"
        app:layout_constraintTop_toTopOf="@+id/imgQuadradoADM2"
        app:srcCompat="@drawable/gerenciar" />

    <ImageButton
        android:id="@+id/imgbListar"
        android:layout_width="58dp"
        android:layout_height="56dp"
        android:background="@null"
        app:layout_constraintBottom_toBottomOf="@+id/imgQuadradoADM3"
        app:layout_constraintEnd_toEndOf="@+id/imgQuadradoADM3"
        app:layout_constraintStart_toStartOf="@+id/imgQuadradoADM3"
        app:layout_constraintTop_toTopOf="@+id/imgQuadradoADM3"
        app:srcCompat="@drawable/listar" />

    <ImageButton
        android:id="@+id/imgbAdocoes"
        android:layout_width="58dp"
        android:layout_height="56dp"
        android:background="@null"
        app:layout_constraintBottom_toBottomOf="@+id/imgQuadradoAdm4"
        app:layout_constraintEnd_toEndOf="@+id/imgQuadradoAdm4"
        app:layout_constraintStart_toStartOf="@+id/imgQuadradoAdm4"
        app:layout_constraintTop_toTopOf="@+id/imgQuadradoAdm4"
        app:srcCompat="@drawable/adocoes" />

    <TextView
        android:id="@+id/txtCadastrarADM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="94dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="CADASTRAR"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgQuadradoADM1" />

    <TextView
        android:id="@+id/txtGerenciarADM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="96dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="GERENCIAR"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgQuadradoADM2" />

    <TextView
        android:id="@+id/txtListarADM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="113dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="LISTAR"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgQuadradoADM3" />

    <TextView
        android:id="@+id/txtAdocoesADM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="100dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="ADOÇÕES"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgQuadradoAdm4" />

    <ImageView
        android:id="@+id/imgLinhaADM1"
        android:layout_width="67dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="104dp"
        android:layout_marginTop="-2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtCadastrarADM"
        app:srcCompat="@drawable/retangulolaranja" />

    <ImageView
        android:id="@+id/imgLinhaADM2"
        android:layout_width="67dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="-2dp"
        android:layout_marginEnd="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtGerenciarADM"
        app:srcCompat="@drawable/retangulolaranja" />

    <ImageView
        android:id="@+id/imgLinhaADM3"
        android:layout_width="67dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="104dp"
        android:layout_marginTop="-2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtListarADM"
        app:srcCompat="@drawable/retangulolaranja" />

    <ImageView
        android:id="@+id/imgLinhaADM4"
        android:layout_width="67dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="-2dp"
        android:layout_marginEnd="101dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtAdocoesADM"
        app:srcCompat="@drawable/retangulolaranja" />
</androidx.constraintlayout.widget.ConstraintLayout>