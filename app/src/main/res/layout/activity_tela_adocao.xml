<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0EAD3"
    tools:context=".telaAdocao" >

    <ImageView
        android:id="@+id/imgIconeADOCAO"
        android:layout_width="74dp"
        android:layout_height="71dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="75dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/epet" />

    <TextView
        android:id="@+id/txtADOCAO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="96dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="ADOÇÃO"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imgIconeADOCAO"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgLinhaADOCAO1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/imgIconeADOCAO"
        app:srcCompat="@drawable/retangulolaranja"
        tools:layout_editor_absoluteY="126dp" />

    <TextView
        android:id="@+id/txtSelecioneADCOAO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="182dp"
        android:fontFamily="@font/poppins"
        android:text="Selecione o pet que deseja adotar:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imgbPet1"
        android:layout_width="125dp"
        android:layout_height="180dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="245dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/retanguloadocao" />

    <ImageButton
        android:id="@+id/imgbPet2"
        android:layout_width="125dp"
        android:layout_height="180dp"
        android:layout_marginTop="245dp"
        android:layout_marginEnd="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/retanguloadocao" />

    <ImageButton
        android:id="@+id/imgbPet3"
        android:layout_width="125dp"
        android:layout_height="180dp"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="@+id/imgbPet1"
        app:layout_constraintStart_toStartOf="@+id/imgbPet1"
        app:layout_constraintTop_toBottomOf="@+id/imgbPet1"
        app:srcCompat="@drawable/retanguloadocao" />

    <ImageButton
        android:id="@+id/imgbPet4"
        android:layout_width="125dp"
        android:layout_height="180dp"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="@+id/imgbPet2"
        app:layout_constraintStart_toStartOf="@+id/imgbPet2"
        app:layout_constraintTop_toBottomOf="@+id/imgbPet2"
        app:srcCompat="@drawable/retanguloadocao" />

    <ImageView
        android:id="@+id/imgCachorroADOCAO"
        android:layout_width="75dp"
        android:layout_height="65dp"
        app:layout_constraintEnd_toEndOf="@+id/imgbPet1"
        app:layout_constraintStart_toStartOf="@+id/imgbPet1"
        app:layout_constraintTop_toTopOf="@+id/imgbPet1"
        app:srcCompat="@drawable/cachorro1" />

    <ImageView
        android:id="@+id/imgRetanguloADOCAO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="@+id/imgbPet1"
        app:layout_constraintStart_toStartOf="@+id/imgbPet1"
        app:layout_constraintTop_toBottomOf="@+id/imgCachorroADOCAO"
        app:srcCompat="@drawable/faixapreta" />

    <TextView
        android:id="@+id/txtNomeADOCAO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_semibold"
        android:text="Nome"
        android:textColor="#F0EAD3"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/imgRetanguloADOCAO"
        app:layout_constraintStart_toStartOf="@+id/imgRetanguloADOCAO"
        app:layout_constraintTop_toTopOf="@+id/imgRetanguloADOCAO" />

    <TextView
        android:id="@+id/txtEspecieADOCAO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/poppins"
        android:text="Espécie"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="@+id/imgbPet1"
        app:layout_constraintTop_toBottomOf="@+id/imgRetanguloADOCAO" />

    <TextView
        android:id="@+id/txtEtariaADOCAO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="3dp"
        android:fontFamily="@font/poppins"
        android:text="Faixa etária"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="@+id/imgbPet1"
        app:layout_constraintTop_toBottomOf="@+id/txtEspecieADOCAO" />

    <TextView
        android:id="@+id/txtGeneroADOCAO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="3dp"
        android:fontFamily="@font/poppins"
        android:text="Gênero"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="@+id/imgbPet1"
        app:layout_constraintTop_toBottomOf="@+id/txtEtariaADOCAO" />

    <TextView
        android:id="@+id/txtDispADOCAO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="3dp"
        android:fontFamily="@font/poppins"
        android:text="Disponibilidade"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="@+id/imgbPet1"
        app:layout_constraintTop_toBottomOf="@+id/txtGeneroADOCAO" />

</androidx.constraintlayout.widget.ConstraintLayout>